<h1>
  Posts:
  <%= Post.count %>
</h1>

<%= link_to 'New Post', new_post_path %>

<br>

<div style="overflow-x:auto;">
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Date</th>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.created_at.strftime("%d/%H/%Y") %></td>
          <td>
            <%= image_tag(post.qr_code) if post.qr_code.attached? %>
            <%= image_tag(post.barcode) if post.barcode.attached? %>
          </td>
          <td><%= simple_format(post.content) %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>